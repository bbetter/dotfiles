#!/bin/bash

SAVE_DIR=~/ÐšÐ°Ñ€Ñ‚Ð¸Ð½ÐºÐ¸/Screenshots
mkdir -p "$SAVE_DIR"

case "$1" in
    area-clip)
        grim -g "$(slurp)" - | wl-copy
        notify-send "ðŸ“‹ Screenshot" "Area copied to clipboard"
        ;;
    area-file)
        FILE="$SAVE_DIR/$(date +'screenshot_%Y-%m-%d_%H-%M-%S.png')"
        grim -g "$(slurp)" "$FILE"
        notify-send "ðŸ’¾ Screenshot" "Saved to:\n$FILE"
        ;;
    full-clip)
        grim - | wl-copy
        notify-send "ðŸ“‹ Screenshot" "Screen copied to clipboard"
        ;;
    full-file)
        FILE="$SAVE_DIR/$(date +'screenshot_%Y-%m-%d_%H-%M-%S.png')"
        grim "$FILE"
        notify-send "ðŸ’¾ Screenshot" "Saved to:\n$FILE"
        ;;
esac
